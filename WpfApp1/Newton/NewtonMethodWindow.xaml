<Window x:Class="WpfApp1.NewtonMethodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Метод Ньютона - Поиск минимума функции" 
        Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#ebf2fa" Offset="0.0" />
            <GradientStop Color="#e4edf6" Offset="0.6" />
            <GradientStop Color="#dae3f0" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0">
            <MenuItem Header="Файл">
                <MenuItem Header="Рассчитать" Click="Calculate_Click"/>
                <MenuItem Header="Следующий шаг" Click="NextStep_Click" Name="miNextStep"/>
                <MenuItem Header="Сбросить итерации" Click="ResetSteps_Click"/>
                <MenuItem Header="Очистить" Click="Clear_Click"/>
                <Separator/>
                <MenuItem Header="Выход" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Header="Синтаксис функций" Click="Help_Click"/>
            </MenuItem>
        </Menu>

        <!-- Input parameters -->
        <GroupBox Grid.Row="1" Header="Параметры" Margin="10" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Функция f(x):" Margin="5"/>
                <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Name="txtFunction" Margin="5"
                         Text="x*x - 2*x + 1" ToolTip="Введите математическое выражение функции"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Левая граница a:" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="1" Name="txtA" Margin="5" Text="-1"/>

                <Label Grid.Row="1" Grid.Column="2" Content="Правая граница b:" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="3" Name="txtB" Margin="5" Text="3"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Точность ε:" Margin="5"/>
                <TextBox Grid.Row="2" Grid.Column="1" Name="txtEpsilon" Margin="5" Text="0,001"/>

                <Label Grid.Row="2" Grid.Column="2" Content="Макс. итераций:" Margin="5"/>
                <TextBox Grid.Row="2" Grid.Column="3" Name="txtMaxIterations" Margin="5" Text="100"/>

                <!-- Кнопки управления -->
                <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" 
                            Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                    <Button Name="btnCalculate" Content="Рассчитать" Margin="5,0" 
                            Width="120" Click="Calculate_Click"/>
                    <Button Name="btnStepByStep" Content="Пошагово" Margin="5,0" 
                            Width="100" Click="StartStepByStep_Click"/>
                    <Button Name="btnNextStep" Content="Следующий шаг" Margin="5,0" 
                            Width="120" Click="NextStep_Click" IsEnabled="False"/>
                    <Button Name="btnResetSteps" Content="Сбросить" Margin="5,0" 
                            Width="80" Click="ResetSteps_Click"/>
                    <Button Name="btnClear" Content="Очистить" Margin="5,0" 
                            Width="80" Click="Clear_Click"/>
                </StackPanel>

                <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Name="lblStepInfo" Margin="5"
                           FontWeight="Bold" Foreground="DarkBlue"/>
            </Grid>
        </GroupBox>

        <!-- Results and Chart -->
        <GroupBox Grid.Row="2" Header="Результаты" Margin="10" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Results -->
                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
                    <TextBlock Name="lblResult" Text="Результат: " FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Name="lblFunctionValue" Text="f(min) = " FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Name="lblIterations" Text="Количество итераций: " FontWeight="Bold" Margin="0,0,0,5"/>
                </StackPanel>

                <!-- Chart -->
                <oxy:PlotView Grid.Row="1" Name="plotView" Margin="0,10,0,10"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>