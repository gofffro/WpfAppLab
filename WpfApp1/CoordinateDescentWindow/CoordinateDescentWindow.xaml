<Window x:Class="WpfApp1.CoordinateDescentWindow.CoordinateDescentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Метод покоординатного спуска" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#f0f7ff" Offset="0.0" />
            <GradientStop Color="#e6f2ff" Offset="0.6" />
            <GradientStop Color="#d9ebff" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0">
            <MenuItem Header="Файл">
                <MenuItem Header="Рассчитать" Click="Calculate_Click"/>
                <MenuItem Header="Очистить всё" Click="ClearAll_Click"/>
                <Separator/>
                <MenuItem Header="Выход" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Настройки">
                <MenuItem Header="Показать сетку" IsCheckable="True" IsChecked="True" 
                          Name="miShowGrid" Click="ShowGrid_Click"/>
                <MenuItem Header="Тип спуска" Name="miDescentType" IsCheckable="True" IsChecked="True"
                          Click="DescentType_Click">
                    <MenuItem.ToolTip>
                        <TextBlock>
                            Поиск минимума (включено) или максимума (выключено)
                        </TextBlock>
                    </MenuItem.ToolTip>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Стиль графика">
                    <MenuItem Header="Контурный" Click="ContourStyle_Click" IsChecked="True" Name="miContour"/>
                    <MenuItem Header="Поверхность 3D" Click="Surface3D_Click"/>
                    <MenuItem Header="Тепловая карта" Click="HeatMapStyle_Click"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Header="Синтаксис функций" Click="Help_Click"/>
                <MenuItem Header="О методе" Click="AboutMethod_Click"/>
                <MenuItem Header="О программе" Click="AboutProgram_Click"/>
            </MenuItem>
        </Menu>

        <!-- Параметры функции и метода -->
        <GroupBox Grid.Row="1" Header="Параметры функции и метода" Margin="10,5" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Функция двух переменных -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Функция f(x,y):" 
                           Margin="5" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" 
                         Name="txtFunction" Text="x^2 + y^2" 
                         FontSize="14" Height="35" Margin="5"
                         ToolTip="Введите функцию двух переменных (x и y). Примеры: x^2 + y^2, sin(x)*cos(y), exp(-x^2-y^2)"/>

                <!-- Область поиска -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" 
                            Orientation="Horizontal" Margin="5,10">
                    <TextBlock Text="Область поиска:" FontWeight="Bold" 
                               Margin="0,0,10,0" VerticalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal">
                        <Label Content="x ∈ [" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBox Name="txtXMin" Text="-5" Width="60" Margin="2" 
                                 ToolTip="Минимальное значение x"/>
                        <Label Content=";" Margin="2,0,2,0" VerticalAlignment="Center"/>
                        <TextBox Name="txtXMax" Text="5" Width="60" Margin="2" 
                                 ToolTip="Максимальное значение x"/>
                        <Label Content="]" Margin="2,0,10,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Label Content="y ∈ [" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBox Name="txtYMin" Text="-5" Width="60" Margin="2" 
                                 ToolTip="Минимальное значение y"/>
                        <Label Content=";" Margin="2,0,2,0" VerticalAlignment="Center"/>
                        <TextBox Name="txtYMax" Text="5" Width="60" Margin="2" 
                                 ToolTip="Максимальное значение y"/>
                        <Label Content="]" Margin="2,0,20,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Label Content="Начальная точка:" Margin="10,0,5,0" 
                               VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <Label Content="x₀ =" Margin="0,0,2,0" VerticalAlignment="Center"/>
                        <TextBox Name="txtStartX" Text="2" Width="50" Margin="2" 
                                 ToolTip="Начальное значение x"/>
                        <Label Content="y₀ =" Margin="10,0,2,0" VerticalAlignment="Center"/>
                        <TextBox Name="txtStartY" Text="3" Width="50" Margin="2" 
                                 ToolTip="Начальное значение y"/>
                    </StackPanel>
                </StackPanel>

                <!-- Параметры метода -->
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" 
                            Orientation="Horizontal" Margin="5,10">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Точность ε:" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBox Name="txtEpsilon" Text="0.001" Width="80" Margin="2" 
                                 ToolTip="Точность вычисления (например: 0.001)"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="20,0">
                        <Label Content="Макс. итераций:" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBox Name="txtMaxIterations" Text="100" Width="60" Margin="2" 
                                 ToolTip="Максимальное количество итераций (1-1000)"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="20,0">
                        <CheckBox Name="cbFindMinimum" Content="Поиск минимума" 
                                  IsChecked="True" VerticalAlignment="Center"
                                  Checked="FindMinimum_Checked" Unchecked="FindMinimum_Unchecked"
                                  ToolTip="Поиск минимума функции"/>
                        <CheckBox Name="cbFindMaximum" Content="Поиск максимума" 
                                  Margin="20,0,0,0" VerticalAlignment="Center"
                                  Checked="FindMaximum_Checked" Unchecked="FindMaximum_Unchecked"
                                  ToolTip="Поиск максимума функции"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Results and Chart -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="450"/>
            </Grid.ColumnDefinitions>

            <!-- Chart -->
            <GroupBox Grid.Column="0" Header="График функции и траектория спуска" Margin="0,0,5,0" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <oxy:PlotView Name="plotView" Grid.Row="0" Margin="0"/>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5,5" HorizontalAlignment="Center">
                        <TextBlock Name="lblPlotType" Text="Контурный график" 
                                   FontWeight="Bold" Foreground="DarkBlue"/>
                        <TextBlock Name="lblPlotInfo" Text="" Margin="10,0,0,0" 
                                   Foreground="Gray" FontSize="11"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Results -->
            <GroupBox Grid.Column="1" Header="Результаты вычислений" Margin="5,0,0,0" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Прогресс бар -->
                    <ProgressBar Grid.Row="0" Name="progressBar" Height="20" Margin="0,0,0,10"
                                 Minimum="0" Maximum="100" Value="0" Visibility="Collapsed"/>

                    <TextBlock Grid.Row="0" Name="lblProgress" Text="" Margin="0,0,0,10" 
                               HorizontalAlignment="Center" FontWeight="Bold"
                               Visibility="Collapsed"/>

                    <!-- Информация о расчете -->
                    <Border Grid.Row="1" BorderBrush="#4CAF50" BorderThickness="1" 
                            Background="#E8F5E9" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Информация о поиске:" FontWeight="Bold" 
                                       Foreground="#2E7D32" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Функция: " FontWeight="SemiBold"/>
                                <TextBlock Name="tbFunction" Text="f(x,y)" TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Область: " FontWeight="SemiBold"/>
                                <TextBlock Name="tbSearchArea" Text="x∈[-5,5], y∈[-5,5]"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Нач. точка: " FontWeight="SemiBold"/>
                                <TextBlock Name="tbStartPoint" Text="(2, 3)"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Точность: " FontWeight="SemiBold"/>
                                <TextBlock Name="tbEpsilon" Text="0.001"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Результаты с правильным скроллингом -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Disabled"
                                  Margin="0,0,0,10">
                        <StackPanel>
                            <!-- Результат минимума -->
                            <Border BorderBrush="#2196F3" BorderThickness="2" 
                                    Background="#E3F2FD" Padding="12" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="Поиск минимума:" FontWeight="Bold" 
                                               Foreground="#1565C0" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                        <TextBlock Text="Точка: " FontWeight="SemiBold"/>
                                        <TextBlock Name="tbMinPoint" Text="(-, -)" 
                                                   FontWeight="Bold" Foreground="#0D47A1"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                        <TextBlock Text="Значение: " FontWeight="SemiBold"/>
                                        <TextBlock Name="tbMinValue" Text="-" 
                                               FontWeight="Bold" Foreground="#0D47A1"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Итераций: " FontWeight="SemiBold"/>
                                        <TextBlock Name="tbMinIterations" Text="-" Foreground="#1976D2"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                        <TextBlock Text="Время: " FontWeight="SemiBold"/>
                                        <TextBlock Name="tbMinTime" Text="-" Foreground="#1976D2"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Результат максимума -->
                            <Border BorderBrush="#FF9800" BorderThickness="2" 
                                    Background="#FFF3E0" Padding="12" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="Поиск максимума:" FontWeight="Bold" 
                                               Foreground="#EF6C00" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                        <TextBlock Text="Точка: " FontWeight="SemiBold"/>
                                        <TextBlock Name="tbMaxPoint" Text="(-, -)" 
                                               FontWeight="Bold" Foreground="#E65100"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                        <TextBlock Text="Значение: " FontWeight="SemiBold"/>
                                        <TextBlock Name="tbMaxValue" Text="-" 
                                               FontWeight="Bold" Foreground="#E65100"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Итераций: " FontWeight="SemiBold"/>
                                        <TextBlock Name="tbMaxIterations" Text="-" Foreground="#F57C00"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                        <TextBlock Text="Время: " FontWeight="SemiBold"/>
                                        <TextBlock Name="tbMaxTime" Text="-" Foreground="#F57C00"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- История итераций -->
                            <Border BorderBrush="#9E9E9E" BorderThickness="1" 
                                    Background="#FAFAFA" Padding="5">
                                <StackPanel>
                                    <TextBlock Text="История итераций:" FontWeight="Bold" 
                                               Margin="0,0,0,5"/>
                                    <ListView Name="lvIterations" Height="200" MaxHeight="250"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                              BorderThickness="0" Background="Transparent">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Шаг" Width="50" 
                                                    DisplayMemberBinding="{Binding Step}"/>
                                                <GridViewColumn Header="x" Width="80" 
                                                    DisplayMemberBinding="{Binding X, StringFormat=F4}"/>
                                                <GridViewColumn Header="y" Width="80" 
                                                    DisplayMemberBinding="{Binding Y, StringFormat=F4}"/>
                                                <GridViewColumn Header="f(x,y)" Width="100" 
                                                    DisplayMemberBinding="{Binding Value, StringFormat=F6}"/>
                                                <GridViewColumn Header="Δ" Width="70" 
                                                    DisplayMemberBinding="{Binding Delta, StringFormat=E2}"/>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Кнопки управления -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" 
                                HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Name="btnCalculate" Content="Рассчитать" Margin="5,0" 
                                Width="120" Click="Calculate_Click" Background="#4CAF50" 
                                Foreground="White" FontWeight="Bold"
                                ToolTip="Выполнить поиск экстремумов"/>
                        <Button Name="btnClear" Content="Очистить" Margin="5,0" 
                                Width="80" Click="ClearAll_Click" 
                                ToolTip="Очистить все поля и график"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Background="#E3F2FD">
            <StatusBarItem>
                <TextBlock Name="lblStatus" Text="Готов к работе"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Name="lblTime" Text="Время: 0 мс"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Name="lblCurrentPoint" Text="Точка: (-, -)"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Name="lblFunctionValue" Text="f(x,y) = -"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Name="lblIterationCount" Text="Итераций: 0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>