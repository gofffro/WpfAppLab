<Window x:Class="WpfApp1.OlimpSort.OlimpSortWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Олимпиадные сортировки - Лабораторный практикум" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#ebf2fa" Offset="0.0" />
            <GradientStop Color="#e4edf6" Offset="0.6" />
            <GradientStop Color="#dae3f0" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="DarkBlue"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Navy"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="True"/>
            <Setter Property="CanUserDeleteRows" Value="True"/>
            <Setter Property="AlternatingRowBackground" Value="LightCyan"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Menu Strip -->
        <Menu DockPanel.Dock="Top" Background="LightSteelBlue">
            <MenuItem Header="Файл">
                <MenuItem Header="Загрузить из Excel" Click="LoadFromExcel_Click"/>
                <MenuItem Header="Загрузить из Google Table" Click="LoadFromGoogle_Click"/>
                <Separator/>
                <MenuItem Header="Выход" Click="Exit_Click"/>
            </MenuItem>

            <MenuItem Header="Данные">
                <MenuItem Header="Сгенерировать случайно" Click="GenerateRandom_Click"/>
                <MenuItem Header="Очистить данные" Click="ClearData_Click"/>
            </MenuItem>

            <MenuItem Header="Сортировка">
                <MenuItem Header="Запуск сортировки" Click="StartSorting_Click"/>
                <Separator/>
                <MenuItem Header="Сбросить" Click="ResetColors_Click"/>
            </MenuItem>
        </Menu>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Background="LightGray">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готов к работе"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Controls -->
            <GroupBox Grid.Column="0" Header="Управление сортировкой" Margin="5" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Array Size Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Размер массива:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="ArraySizeTextBox" Width="50" Text="10"/>
                        <Button Content="Применить" Click="ApplySize_Click" 
                               Style="{StaticResource ButtonStyle}" Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- Sort Order -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Порядок:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <RadioButton x:Name="AscendingRadio" Content="По возрастанию" IsChecked="True" GroupName="SortOrder"/>
                        <RadioButton x:Name="DescendingRadio" Content="По убыванию" GroupName="SortOrder" Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- Algorithm Selection -->
                    <StackPanel Grid.Row="2" Margin="5">
                        <TextBlock Text="Алгоритмы сортировки:" Style="{StaticResource SectionHeaderStyle}"/>

                        <CheckBox x:Name="BubbleSortCheckBox" Content="Пузырьковая" Style="{StaticResource CheckBoxStyle}"/>
                        <CheckBox x:Name="InsertionSortCheckBox" Content="Вставками" Style="{StaticResource CheckBoxStyle}"/>
                        <CheckBox x:Name="ShakerSortCheckBox" Content="Шейкерная" Style="{StaticResource CheckBoxStyle}"/>
                        <CheckBox x:Name="QuickSortCheckBox" Content="Быстрая" Style="{StaticResource CheckBoxStyle}"/>
                        <CheckBox x:Name="BogoSortCheckBox" Content="BOGO" Style="{StaticResource CheckBoxStyle}"/>

                        <Button Content="Выбрать все" Click="SelectAll_Click" Style="{StaticResource ButtonStyle}" Margin="0,10,0,5"/>
                        <Button Content="Снять все" Click="DeselectAll_Click" Style="{StaticResource ButtonStyle}"/>
                    </StackPanel>

                    <!-- Generation Controls -->
                    <GroupBox Grid.Row="3" Header="Генерация данных" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Минимум:" Margin="2"/>
                            <TextBox x:Name="MinValueTextBox" Text="1" Margin="2"/>
                            <TextBlock Text="Максимум:" Margin="2,5,2,2"/>
                            <TextBox x:Name="MaxValueTextBox" Text="100" Margin="2"/>
                            <Button Content="Сгенерировать" Click="GenerateWithRange_Click" 
                                   Style="{StaticResource ButtonStyle}" Margin="2,10,2,2"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Control Buttons -->
                    <StackPanel Grid.Row="4" Margin="5">
                        <Button Content="Запуск сортировки" Click="StartSorting_Click" 
                               Style="{StaticResource ButtonStyle}" Background="LightGreen" FontWeight="Bold"/>
                        <Button Content="Сбросить" Click="ResetColors_Click" 
                               Style="{StaticResource ButtonStyle}" Background="LightYellow"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Right Panel - Data and Visualization -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>

                <!-- Data Input -->
                <GroupBox Grid.Row="0" Header="Входные данные" Margin="5" Padding="5">
                    <DataGrid x:Name="InputDataGrid" Style="{StaticResource DataGridStyle}" 
                             LoadingRow="DataGrid_LoadingRow"/>
                </GroupBox>

                <!-- Visualization Area -->
                <GroupBox Grid.Row="1" Header="Визуализация сортировки" Margin="5" Padding="5">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Height="120">
                        <ItemsControl x:Name="VisualizationContainer">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="DarkBlue" BorderThickness="1" Margin="1"
                                            Background="{Binding Color}" Width="30" Height="{Binding Height}">
                                        <TextBlock Text="{Binding Value}" HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" FontWeight="Bold"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>

                <!-- Results -->
                <GroupBox Grid.Row="2" Header="Результаты и время выполнения" Margin="5" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Sorted Data -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Отсортированный массив:" Style="{StaticResource SectionHeaderStyle}"/>
                            <DataGrid x:Name="ResultDataGrid" Style="{StaticResource DataGridStyle}" 
                                     Height="122" IsReadOnly="True" LoadingRow="DataGrid_LoadingRow"/>
                        </StackPanel>

                        <!-- Timing Results -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Время выполнения:" Style="{StaticResource SectionHeaderStyle}"/>
                            <TextBox x:Name="TimingResultsTextBox" Height="121" Margin="5" IsReadOnly="True" 
                                    VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                                    TextWrapping="Wrap" Background="WhiteSmoke" FontFamily="Consolas"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>
    </DockPanel>
</Window>